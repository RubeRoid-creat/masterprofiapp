<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Кнопка назад -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        app:tint="@android:color/white"
        app:backgroundTint="@color/md_theme_light_primary"
        app:elevation="4dp" />

    <!-- Нижняя панель с информацией о заказе -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/order_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Индикатор для перетаскивания -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/drag_handle" />

                <!-- Адрес отправления (текущая позиция мастера) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_green" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Откуда"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tv_pickup_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Текущее местоположение"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Изменить"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.TextButton" />
                </LinearLayout>

                <!-- Адрес назначения (адрес клиента) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_red" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Куда"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tv_destination_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Адрес клиента"
                            android:textSize="16sp"
                            android:textColor="#212121"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_add_destination"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_input_add"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Добавить" />
                </LinearLayout>

                <!-- Информация о заказе -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_order_device"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Устройство"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <ImageButton
                        android:id="@+id/btn_edit_order"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Редактировать" />
                </LinearLayout>


                <!-- Кнопка принять заказ -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_accept_order"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Принять заказ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:cornerRadius="16dp"
                    app:icon="@android:drawable/ic_menu_agenda"
                    app:iconGravity="start"
                    app:iconTint="@android:color/white" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

    <!-- Старая карточка заказа (скрыта, используется для совместимости) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selected_order_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/selected_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:text="#1" />

            <TextView
                android:id="@+id/selected_order_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:text="Samsung Galaxy S21" />

            <TextView
                android:id="@+id/selected_order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:textColor="#424242"
                android:text="ул. Ленина, д. 10, кв. 5" />

            <TextView
                android:id="@+id/selected_order_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#00897B"
                android:text="5000 ₽" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Открыть заказ"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


