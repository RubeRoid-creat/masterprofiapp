<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Фильтры"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filters"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сбросить" />
    </LinearLayout>

    <!-- Тип техники -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип техники"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_device_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_washing_machines"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стиральные машины" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dishwashers"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посудомоечные машины" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ovens"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Духовые шкафы" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_refrigerators"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Холодильники" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_microwaves"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Микроволновые печи" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_freezers"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Морозильные лари" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cooktops"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Варочные панели" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_laptops"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ноутбуки" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_desktops"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Десктопы" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_coffee_machines"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кофемашины" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_air_conditioners"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кондиционеры" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_water_heaters"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Водонагреватели" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.core.widget.NestedScrollView>

    <!-- Цена -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:suffixText="₽"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="От"
                android:inputType="number"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:suffixText="₽"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="До"
                android:inputType="number"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Расстояние -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расстояние"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:suffixText="км"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/filter_max_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Максимальное расстояние"
            android:inputType="numberDecimal"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Срочность -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Срочность"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_urgency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true"
        app:selectionRequired="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_urgency_emergency"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Экстренно" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_urgency_urgent"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Срочно" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_urgency_planned"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Планово" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Кнопка применить -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_apply_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Применить фильтры"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="16dp"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp" />

</LinearLayout>

</androidx.core.widget.NestedScrollView>

